# Server Configuration
PORT=5000
NODE_ENV=production

# Database
# For Render, use MongoDB Atlas connection string
# Format: mongodb+srv://<username>:<password>@cluster.mongodb.net/<dbname>?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/riom

# Session Security
# IMPORTANT: Generate a strong random secret for production
# Use: openssl rand -base64 32
SESSION_SECRET=replace-with-strong-secret-min-32-characters
SESSION_COOKIE_NAME=riom.sid

# CORS Configuration
# For production, set this to your frontend URL
# Multiple origins: https://yourapp.com,https://www.yourapp.com
CORS_ORIGIN=http://localhost:3000
